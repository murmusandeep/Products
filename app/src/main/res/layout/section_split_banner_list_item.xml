<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240dp">

    <ImageView
        android:id="@+id/img_section_first_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_240dp"
        android:src="@drawable/img"
        android:layout_marginEnd="@dimen/_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_section_second_image"/>

    <ImageView
        android:id="@+id/img_section_second_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_240dp"
        android:layout_marginStart="@dimen/_8dp"
        android:src="@drawable/img"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_section_first_image"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>